<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/app_name"
                android:textColor="@color/colorWrite"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_pricce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:text="1角/分钟"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="italic|bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stats_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stats"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:minWidth="60dp"
                    android:minHeight="60dp"
                    android:text="进"
                    android:textColor="@color/colorWrite"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_stat_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/stats_out"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:minWidth="60dp"
                    android:minHeight="60dp"
                    android:text="出"
                    android:textColor="@color/colorWrite"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p1id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P1"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p2id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P2"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p3id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P3"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p4id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P4"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p5id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P5"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/tv_p6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dra_stat"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="空位"
                        android:textColor="@color/color_stats"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_p6id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="P6"
                        android:textColor="@color/colorblack"
                        android:textSize="13dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/tv_clear_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dra_stat_bian"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="清空数据"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/tv_tongji"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dra_stat_bian"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="统计"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp">


                <TextView
                    android:id="@+id/tv_untitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dra_stat_bian"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="更改标题"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_seting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dra_stat_bian"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="修改价格"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>